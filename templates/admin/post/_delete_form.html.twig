<form class = "form-inline" method="post" action="{{ path('post_delete', {'slug': post.slug}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.slug) }}">
    <button class="btn btn-danger">Delete</button>
    <br>
</form>
